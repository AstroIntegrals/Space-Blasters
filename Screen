import java.awt.*;

public class Screen {
	
	Toolkit toolkit = Toolkit.getDefaultToolkit();
	Dimension dim;
	
	public Screen()
	{
		dim = toolkit.getScreenSize();
	}
	
	//Width
	public int getScreenHeight()
	{
		int y = dim.height;
		return y;
	}
	
	//Height
	public int getScreenWidth()
	{
		int x = dim.width;
		return x;
	}
}
